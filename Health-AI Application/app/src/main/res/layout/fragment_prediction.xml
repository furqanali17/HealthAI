    <TextView
        android:id="@+id/Prediction_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Predictions"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:fontFamily="@font/acme"/>


    <TextView
        android:id="@+id/infoTextView1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Prediction_heading"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Our PredictAI service can help catch illnesses such as lung cancer, colon cancer, heart disease before they take a toll." />

